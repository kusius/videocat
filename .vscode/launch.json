{
    "configurations": [
        {
            "name": "Debug videocat",
            "request": "launch",
            "type": "cppvsdbg",
            "cwd": "${workspaceFolder}/build",
            "osx": {
                "MIMode": "lldb",
            },
            "stopAtEntry": false,
            "args": [
                "night.mpg"
            ],
            "program": "${workspaceFolder}/build/videocat",
            "windows": {
                "program": "${workspaceFolder}/build/videocat.exe"
            },
            "logging": {
                "engineLogging": true, 
                "traceResponse": true
            }
        }
    ],
    "version": "2.0.0"
}